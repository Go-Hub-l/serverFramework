    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - 生成调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/echo_server",
            "args": [
                "t"
            ],
            "stopAtConnect": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerArgs": "/usr/bin/gdb"
        }
    ]
}